<%= form_for(@post) do |f| %>
  <div class="form-group">
    <%= render 'shared/error_messages' %>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
    <br>
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', rows: 7 %>
    <br>
    <%= f.submit 'Create Post', class: 'btn btn-success' %>
  </div>
<% end %>